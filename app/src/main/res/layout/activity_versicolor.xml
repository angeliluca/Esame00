<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tec2">

    <TextView
        android:id="@+id/titolo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rosa4"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/lightcoral"/>

    <TextView
        android:id="@+id/rose4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descrizione4"
        android:layout_below="@+id/titolo4"
        android:textSize="15dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/Rosa4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rose4"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gallica" />

</RelativeLayout>